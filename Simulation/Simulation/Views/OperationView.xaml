<UserControl x:Class="Simulation.Views.OperationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simulation.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <DataGrid ItemsSource="{Binding DataGrid_Operation}" SelectedItem="{Binding SelectItem}" SelectionUnit="FullRow" HorizontalAlignment="Left"  VerticalAlignment="Top" IsEnabled="True" RenderTransformOrigin="0,0" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" VerticalGridLinesBrush="White">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Checkbox_IsSelected}" Header="Breakpoint"/>
                <DataGridTextColumn Binding="{Binding Text_Line}"   Header="Line" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Text_ProgramCounter}" Header="Program Counter" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Text_Operation}" Header="Operation" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Text_SourceCode}" Header="Source Code" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
